# DataScope Enhanced - Environment Configuration
# Copy this file to .env and update with your settings

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Data Directories
CACHE_DIRECTORY=./cache
OUTPUT_DIRECTORY=./reports
DATA_DIRECTORY=./data

# Cache Configuration
CACHE_DURATION_HOURS=24
CACHE_MAX_SIZE_MB=1000
CACHE_CLEANUP_INTERVAL_HOURS=6

# =============================================================================
# BROWSER AUTOMATION
# =============================================================================

# Chrome WebDriver Configuration
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver  # Auto-detect if empty
HEADLESS_BROWSER=true
BROWSER_TIMEOUT=30
BROWSER_WINDOW_SIZE=1920x1080

# Browser Automation Settings
MAX_BROWSER_INSTANCES=3
BROWSER_POOL_SIZE=5
SCREENSHOT_ON_ERROR=true

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Flask API Settings
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false

# API Security
API_SECRET_KEY=your-secret-key-here-change-in-production
API_RATE_LIMIT_PER_MINUTE=100
API_RATE_LIMIT_AUTHENTICATED=1000

# CORS Settings
CORS_ORIGINS=*  # Comma-separated list or * for all
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# =============================================================================
# SOCIAL MEDIA CREDENTIALS
# =============================================================================

# Lemon8 Credentials (optional)
LEMON8_USERNAME=
LEMON8_PASSWORD=

# Instagram Credentials (optional)
INSTAGRAM_USERNAME=
INSTAGRAM_PASSWORD=

# LinkedIn Credentials (optional)
LINKEDIN_USERNAME=
LINKEDIN_PASSWORD=

# Twitter/X Credentials (optional)
TWITTER_USERNAME=
TWITTER_PASSWORD=
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (default)
DATABASE_URL=sqlite:///datascope.db

# PostgreSQL (optional)
# DATABASE_URL=postgresql://username:password@localhost:5432/datascope

# Redis (optional for advanced caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# =============================================================================
# EXTERNAL APIS
# =============================================================================

# OpenAI API (for advanced text analysis)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Google APIs
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# News APIs
NEWS_API_KEY=
NEWSDATA_API_KEY=

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=noreply@datascope-enhanced.com

# Slack Webhooks
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#datascope-alerts

# Discord Webhooks
DISCORD_WEBHOOK_URL=

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption
ENCRYPTION_KEY=  # 32-byte base64 encoded key
ENCRYPT_CACHE=false
ENCRYPT_CREDENTIALS=true

# Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_EXPIRATION_HOURS=24
REQUIRE_AUTHENTICATION=false

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE=memory  # memory, redis

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Error Tracking (Sentry)
SENTRY_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# =============================================================================
# AUTOMATION & SCHEDULING
# =============================================================================

# Scheduler Configuration
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=UTC
MAX_CONCURRENT_JOBS=5

# Default Automation Settings
DEFAULT_COLLECTION_INTERVAL_HOURS=24
AUTO_CLEANUP_OLD_DATA_DAYS=30
AUTO_GENERATE_REPORTS=true

# =============================================================================
# DOMAIN-SPECIFIC SETTINGS
# =============================================================================

# Cybersecurity Domain
CISA_KEV_URL=https://www.cisa.gov/sites/default/files/feeds/known_exploited_vulnerabilities.json
FBI_IC3_URL=https://www.ic3.gov/PSA
ENABLE_THREAT_ANALYSIS=true

# Real Estate Domain
ZILLOW_API_KEY=
REALTOR_API_KEY=
ENABLE_MARKET_ANALYSIS=true

# Healthcare Domain
CDC_API_KEY=
WHO_API_KEY=
ENABLE_HEALTH_TRENDS=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Collection Settings
MAX_ITEMS_PER_COLLECTION=1000
COLLECTION_TIMEOUT_SECONDS=300
PARALLEL_COLLECTIONS=true
MAX_PARALLEL_WORKERS=4

# Memory Management
MAX_MEMORY_USAGE_MB=2048
GARBAGE_COLLECTION_INTERVAL=3600

# Network Settings
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
USER_AGENT=DataScope-Enhanced/1.0

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Testing
TEST_DATABASE_URL=sqlite:///test_datascope.db
MOCK_BROWSER_AUTOMATION=false
MOCK_EXTERNAL_APIS=false

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
SAVE_REQUEST_LOGS=false

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Production Deployment
WORKERS=4
WORKER_CLASS=sync
WORKER_TIMEOUT=300
KEEPALIVE=2

# Docker Settings
DOCKER_REGISTRY=
DOCKER_IMAGE_TAG=latest

# Cloud Provider Settings
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

GOOGLE_CLOUD_PROJECT=
GOOGLE_APPLICATION_CREDENTIALS=

AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
ENABLE_BROWSER_AUTOMATION=true
ENABLE_SOCIAL_MEDIA_COLLECTION=true
ENABLE_API_ENDPOINTS=true
ENABLE_REPORT_GENERATION=true
ENABLE_IMAGE_GENERATION=true
ENABLE_WEBHOOK_NOTIFICATIONS=true
ENABLE_REAL_TIME_UPDATES=false

# Experimental Features
ENABLE_AI_ANALYSIS=false
ENABLE_PREDICTIVE_ANALYTICS=false
ENABLE_AUTOMATED_INSIGHTS=false

